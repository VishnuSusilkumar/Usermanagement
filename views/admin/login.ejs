    <h1>Admin Login</h1>
    <p class="please">Please enter your details:</p>

<%
    if(typeof message !== 'undefined'){

        %>
            <h3><%=message  %></h3>
        <%
    }

%>

<form action="" method="post">

    <label for="username">Email Address</label>
        <input type="email" name="email" required placeholder="Enter Email">
