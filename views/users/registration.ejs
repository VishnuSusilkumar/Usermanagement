<%- include('../layouts/header.ejs') %>

<div class="registration-container">

    <h1>Sign Up</h1>

    <form action="" method="post" enctype="multipart/form-data" class="registration-form">
        <label for="name">Name</label>
        <input type="text" name="name" placeholder="Enter Name" required>
        <br><br>
        <label for="email">Email Address</label>
        <input type="email" name="email" placeholder="Enter Email" required>
        <br><br>
        <label for="mno">Number</label>
        <input type="text" name="mno" placeholder="Enter Number" required>
        <br><br>
        <label for="image">Profile Image</label>
        <input type="file" name="image" required>
        <br><br>
        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Enter Password" required>
        <br><br>
        <input type="submit" value="Register">
    </form>
    
    
    <p>Do you have an account? <a href="/login">Sign in</a></p>
    <% 
    
        if(typeof message !== 'undefined'){
            %>
                <p style="color: green;"><%= message %></p>
            <%
        }
    
    %>
    


</div>


<%- include('../layouts/footer.ejs') %>