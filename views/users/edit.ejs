<%- include('../layouts/header.ejs') %>

<div class="registration-container">
    <h1>User Edit</h1>

<img class="admin-image" src="userImages/<%= user.image %>" alt="<%= user.image %>">

<form action="" method="post" enctype="multipart/form-data">

    <input type="file" name="image">
    <input type="hidden" name="user_id" value="<%= user._id %>">
    <br><br>
    <label for="name">Name</label>
    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required>
    <br><br>
    <label for="email">Email Address</label>
    <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required>
    <br><br>
    <label for="mno">Number</label>
    <input type="text" name="mno" value="<%= user.mobile %>" placeholder="Enter Mobile" required>
    <br><br>
    <input type="submit" value="Update Profile">


</form>
</div>

<% 
    
if(typeof message !== 'undefined'){
    %>
        <p style="color: green;"><%= message %></p>
    <%
}

%>

<%- include('../layouts/footer.ejs') %>